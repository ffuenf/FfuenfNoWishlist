{
  "name": "ffuenf/shopware-nowishlist",
  "keywords": ["shopware", "plugin"],
  "description": "This is a extension for Shopware that removes the wishlist functionality in the frontend.",
  "license": "MIT",
  "type": "shopware-plugin",
  "extra": {
    "installer-name": "FfuenfNoWishlist"
  },
  "require": {
        "php" : "^7.0",
        "composer/installers": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "phpspec/phpspec": "^4.3",
        "friendsofphp/php-cs-fixer": "^2.10",
        "roave/security-advisories": "dev-master"
    },
    "config": {
        "bin-dir": "bin"
  },
  "scripts": {
        "test": "phpunit",
        "test-spec": "phpspec run --format dot",
        "cs-check": "php-cs-fixer fix --dry-run --allow-risky=yes -v",
        "cs-fix": "php-cs-fixer fix --allow-risky=yes -v",
        "preCommit": "curl -sS https://gist.githubusercontent.com/arosenhagen/4bb9c642527f4f1bad9f21738d08e2f8/raw/2a4ac87dee5d78c5a0f954d741fd27ac880d3eae/pre-commit.sh > .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit",
        "post-install-cmd": "@preCommit",
        "post-update-cmd": "@preCommit"
  }
}